
{% extends 'base.html.twig' %}


{% block contenido %}

<div class="container-fluid" align="center">
<h1>Modificar Productos</h1>
</div>

<div class="container-fluid" align="center">
<form action="actualizar" method="post" class="form">
	<input type="hidden" name="txtSKU" id="txtSKU" value="{{ p.getSku()}}"/>
	<table class="table" align="center">
		<tr class="form-group">
			<td><label for="">Nombre</label></td>
			<td><input type="text" name="txtNombre" id="txtNombre" value="{{ p.getNombreProduto() }}" required="" class="form-control"/></td>
		</tr>
		
		<tr>
			<td><label for="">Precio</label></td>
			<td><input type="number" name="txtPrecio"
				id="txtPrecio" value="{{ p.getPrecioProducto() }}" class="form-control" /></td>
		</tr>
		
		<tr>
			<td><label for="">Stock</label></td>
			<td><input type="number" name="txtStock" id="txtStock" value="{{ p.getStockProducto() }}" required="" class="form-control"/></td>

		</tr>
		
		
		<tr>
			<td>
				<label for="">Categoria</label>
			</td>
			<td>
				<select class="form-control" name="cboCategoria" id="cboCategoria">
					<option value="">Seleccionar</option>
					
					{% for c in categorias %}
					
					<option  {{ (c.getIdCategoria() == p.getCategoria().getIdCategoria())?'selected':''}} value="{{ c.getIdCategoria() }}">{{ c.getNombreCategoria() }}</option>
					
					{% endfor %}
					
				</select>
			</td>
		</tr>
		
		<tr>
			<td>
				<label for="">Marca</label>
			</td>
			<td>
				<select class="form-control" name="cboMarca" id="cboMarca">
					<option value="">seleccionar</option>
					
					{% for m in marcas %}
					<option {{ (m.getIdMarca() == p.getMarca().getIdMarca())?'selected':'' }} value="{{ m.getIdMarca() }}">{{ m.getNombreMarca() }}</option>
					{% endfor %}
					
				</select>
			</td>
		</tr>
		<tr>
			<td>
				<label for="">Descripcion</label>
			</td>
			<td>
				<input type="text" name="txtDescripcion" id="txtDescripcion" value="{{ p.getDescripcionProduto() }}" required="" class="form-control"/>
			</td>
		</tr>
		
		<tr>
			<td></td>
			<td>
				<input class="btn btn-primary" type="submit" value="Modificar" />
			</td>
		</tr>
	</table>
</form>
</div>
<div align="center" class="container">{{ mensaje }}</div>


{% endblock contenido %}

